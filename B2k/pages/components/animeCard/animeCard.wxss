/* pages/components/animeCard/animeCard.wxss */
.animeCard {
  display: flex;
  flex-direction: row;
  width: 710rpx;
  padding: 10rpx 20rpx;
}

.animeCard-cover {
  width: 220rpx;
  height: 288rpx;
  border-radius: 10rpx;
  flex-shrink:0;

  border-width: 2rpx;
  border-style: solid;
  border-color:rgba(227, 101, 141, 0.233);
}

.animeCard-valueback {
  display: flex;
  flex-direction: column;
  padding: 5rpx 0rpx;
  padding-left: 20rpx;
}

.animeCard-title {
  color: #666;
  font-size: 36rpx;
}

.animeCard-des {
  color: #666;
  font-size: 24rpx;
}